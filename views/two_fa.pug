doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    title Form || Login
  body
    .container
      .row.mt-5
        .col-sm
        .col-sm.rounded.p-3(style='background-color: #80818878')
          h1(align='center') Authentication
          hr
          form.mt-3(action='/two_fa', method='POST')
            |
            - if(info){
              .bg-green-lightest.border.border-green-light.text-green-dark.px-4.py-3.rounded.relative(role='alert') #{info}
            - }   
            |
            
            - if(error){
            .alert.alert-danger.alert-dismissible.fade.show(role='alert')
              strong #{error}
              button.close(type='button', data-dismiss='alert', aria-label='Close')
                span(aria-hidden='true') Ã— 
            - }
            .form-group
              label(for='username') Username
              input#username.form-control(type='text', name='username', aria-describedby='emailHelp', placeholder='Enter username')
            .form-group
              label(for='token') Token
              input#token.form-control(type='text', name='token', placeholder='Token')
              |
              - if(message){
              p(style='color:red') #{message}
              - }
            button.btn.btn-primary(type='submit') Submit
            a.form-check-label.ml-3(href='/forgot', for='forgot')
              | Forgot Password?  |
            a.form-check-label.ml-3(href='/register', for='register')
              | Register
        .col-sm
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')